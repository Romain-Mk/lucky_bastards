<div id="admin_newsfeed">

  <% for (var i = 0; i < stories.length; i++) { %>

    <div class="admin_newsfeed_card">
      <% if (stories[i].imgType) { %>
        <div class="admin_newsfeed_cardTop" style="background-image:url(../images/storypics/<%=stories[i].id+'.'+stories[i].imgType%>);">
      <% } else { %>
        <div class="admin_newsfeed_cardTop" style="background-image:url(../images/storypics/bg-default.jpg);">
      <% } %>
        <div class="admin_cardTop_banner">

          <a href="/admin/stories/<%= stories[i]._id %>/delete">Delete</a>
          <a href="/admin/stories/<%= stories[i]._id %>">Update</a>
          <% if (stories[i].authorPicture) { %>
            <img class="admin_cardTop_authorPic" src="/images/profilepics/<%=stories[i].authorPicture%>" alt="Photo user" />
          <% } else { %>
            <img class="admin_cardTop_authorPic" src="/images/profilepics/default.jpg" alt="Photo user" />
          <% } %>
          
          <div class="admin_cardTop_infos">
            <p class="admin_cardTop_infos_authorName"><%= stories[i].authorName %></p>
            <p class="admin_cardTop_infos_storyDate"><%= moment(stories[i].createdAt).format('DD-MM-YYYY') %></p>
          </div>
        </div>
      </div>

      <div class="admin_newsfeed_cardBottom">
        <h3 class="admin_cardText_title"><%=stories[i].title%></h3>
        <div class="admin_div_cardText_text">
          <p class="admin_cardText_text"><%=stories[i].text%></p>
        </div>
        <a href="stories/<%= stories[i]._id %>">
          <img src="/images/elements/read_more_button.svg" class="admin_cardTex_readMore" />
        </a>
    </div>

  </div>

  <% } %>

</div>

