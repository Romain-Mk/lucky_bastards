<%- include('../inc/header'); %>

    <div id="profile_page_header">
      <% if ( user.picture == null ) { %>
        <img class="user_pic_profile" src="/images/profilepics/default.jpg" alt="Photo user" />
      <% } else { %>
        <img class="user_pic_profile" src="/images/profilepics/<%=user.picture%>" alt="Photo user" />
      <% } %>

        <h2 class="user_name_profile"><%=user.username%></h2>
        <img src="/images/elements/add_as_favorite_author_button.svg"/>
        <div class="social_media_profile">
          <% if ( user.fb != null ) { %>
          <a href="<%=user.fb%>" target="_blank"><img class="social_media_icons" src="/images/elements/facebook_icon.svg"/></a>
          <% } %>
          <% if ( user.twitter != null ) { %>
          <a href="<%=user.twitter%>" target="_blank"><img class="social_media_icons" src="/images/elements/twitter_icon.svg"/></a>
          <% } %>
          <% if ( user.insta != null ) { %>
          <a href="<%=user.insta%>" target="_blank"><img class="social_media_icons" src="/images/elements/instagram_icon.svg"/></a>
          <% } %>
          <% if ( user.blog != null ) { %>
          <a href="<%=user.blog%>" target="_blank"><img class="social_media_icons" src="/images/elements/url_icon.svg"/></a>
          <% } %>
        </div>
      </div>


    <div id="user_stories_navbar">
      <div class="navbar_stories">
        <h3>STORIES</h3>
        <span>17</span>
      </div>
      <div class="navbar_pictures">
        <h3>PICTURES</h3>
        <span>45</span>
      </div>
      <h3>STORY MAP</h3>
      <h3>ABOUT ME</h3>
    </div>

    <!-- NEWSFEED -->
    <div id="user_stories_body">

        <% for (var i=0; i<stories.length; i++) { %>

        <div id="card">

          <div id="cardPic"></div>

          <div id="cardIcons">
            <img src="/images/IMG_0088.JPG" class="user_pic" alt="Photo user" />
            <div id="name_date">
              <p class="user_name">Romain Mk</p>
              <p class="date">22 janvier 2018</p>
            </div>
            <div id="save_share_icons">
              <img class="save" src="/images/elements/save_button.svg"/>
              <img class="share" src="/images/elements/share_button.svg"/>
            </div>
          </div>

          <div id="card_bottom">

            <div id="cardText">
              <h3><%=stories[i].title%></h3>
              <p><%=stories[i].text%></p>
              <img src="/images/elements/read_more_button.svg" class="read_more" />
            </div>

            <div id="cardTags">
              <img src="/images/elements/tag_funny.svg" />
              <img src="/images/elements/tag_dangerous.svg" />
              <img src="/images/elements/tag_scary.svg" />
            </div>

          </div>

        </div>

        <% } %>

    </div>


<%- include('../inc/footer'); %>
