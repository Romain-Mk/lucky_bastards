<%- include('../inc/header'); %>

<div id="admin_header">

  <% if (user.picture) { %>
    <img class="admin_profile_picture" src="/images/profilepics/<%=user.picture%>" alt="Photo user" />
  <% } else { %>
    <img class="admin_profile_picture" src="/images/profilepics/default.jpg" alt="Photo user" />
  <% } %>

  <h2 class="admin_name"><%= user.username %></h2>
  <a href="/admin/newstory"><img src="/images/elements/add_a_story_button.svg"></a>
  <div class="admin_div_social_media">
    <% if (user.fb) { %>
      <a href="<%=user.fb%>" target="_blank">
        <img class="admin_social_media_icons" src="/images/elements/facebook_icon.svg"/>
      </a>
    <% } %>
    <% if (user.twitter) { %>
      <a href="<%=user.twitter%>" target="_blank">
        <img class="admin_social_media_icons" src="/images/elements/twitter_icon.svg"/>
      </a>
    <% } %>
    <% if (user.insta) { %>
      <a href="<%=user.insta%>" target="_blank">
        <img class="admin_social_media_icons" src="/images/elements/instagram_icon.svg"/>
      </a>
    <% } %>
    <% if (user.blog) { %>
      <a href="<%=user.blog%>" target="_blank">
        <img class="admin_social_media_icons" src="/images/elements/url_icon.svg"/>
      </a>
    <% } %>
  </div>

</div>

