
<%- include('inc/header'); %>

<div id="home">

  <div class="homepage_title_zone">
    <h1 class="homepage_title">Lucky Bastards</h1>
    <h2 class="homepage_subtitle">The weirdest, craziest, funniest and most unusual travel stories</h2>
    <!-- <div id="home_icons">
      <img id="facebook_icon" src ="Facebook Icon.png" alt="facebook_icon" />
      <img id="instagram_icon" src ="Instagram Icon.png" alt="instagram_icon" />
    </div> -->
  </div>

  <div id="scroll">
    <img id="arrow" src="/images/elements/Scroll.png" alt="scroll" />
  </div>

</div>

<div id="filters_navbar">
  <% if (log) { %>
    <a href="/admin/newstory"><img src="/images/elements/add_a_story_button.svg"></a>
  <% } else { %>
    <a href="/login/addbutton"><img src="/images/elements/add_a_story_button.svg"></a>
  <% } %>
  <h3>MOST RECENT</h3>
  <h3>MOST POPULAR</h3>
  <h3>FAVORITE AUTHORS</h3>
  <img src="/images/elements/loupe_icon.svg">
</div>

<div id="home_newsfeed">

  <% for (var i = 0; i < stories.length; i++) { %>

    <div class="home_newsfeed_card">

      <div class="home_newsfeed_cardTop">
        <div class="cardTop_banner">
          <a href="authors/<%= stories[i].authorId %>" class="home_cardTop_authorPic">
            <% if (stories[i].authorPicture) { %>
              <img class="user_pic_profile" src="/images/profilepics/<%=stories[i].authorPicture%>" alt="Photo user" />
            <% } else { %>
              <img class="user_pic_profile" src="/images/profilepics/default.jpg" alt="Photo user" />
            <% } %>
          </a>
          <div class="cardTop_infos">
            <a href="authors/<%= stories[i].authorId %>" class="cardTop_infos_authorName"><%= stories[i].authorName %></a>
            <p class="cardTop_infos_storyDate"><%= stories[i].createdAt %></p>
          </div>
        </div>
      </div>

      <div class="home_newsfeed_cardBottom">
        <h3 class="cardText_title"><%=stories[i].title%></h3>
        <p class="cardText_text"><%=stories[i].text%></p>
        <img src="/images/elements/read_more_button.svg" class="cardTex_readMore" />
      </div>

    </div>

<% } %>

</div>

<%- include('inc/footer'); %>
