<div id="author_newsfeed">

  <% for (var i=0; i<stories.length; i++) { %>

    <div class="author_newsfeed_card">

      <div class="author_newsfeed_cardTop">
        <div class="author_cardTop_banner">
          <% if (stories[i].authorPicture) { %>
            <img class="author_cardTop_authorPic" src="/images/profilepics/<%=stories[i].authorPicture%>" alt="Photo user" />
          <% } else { %>
            <img class="author_cardTop_authorPic" src="/images/profilepics/default.jpg" alt="Photo user" />
          <% } %>
          <div class="author_cardTop_infos">
            <p class="author_cardTop_infos_authorName"><%= stories[i].authorName %></p>
            <p class="author_cardTop_infos_storyDate"><%= stories[i].createdAt %></p>
          </div>
        </div>
      </div>

      <div class="author_newsfeed_cardBottom">
        <h3 class="author_cardText_title"><%=stories[i].title%></h3>
        <div class="author_div_cardText_text">
          <p class="author_cardText_text"><%=stories[i].text%></p>
        </div>
        <a href="stories/<%= stories[i]._id %>"> <img src="/images/elements/read_more_button.svg" class="author_cardTex_readMore" /> </a>
      </div>

    </div>

  <% } %>

</div>

