<%- include('inc/header'); %>

<div id="profile_page_header">
  <% if (user.picture) { %>
    <img class="user_pic_profile" src="/images/profilepics/<%=user.picture%>" alt="Photo user" />
  <% } else { %>
    <img class="user_pic_profile" src="/images/profilepics/default.jpg" alt="Photo user" />
  <% } %>
  <h2 class="user_name_profile"><%= user.username %></h2>
  <img src="/images/elements/add_as_favorite_author_button.svg"/>
  <div class="social_media_profile">
    <% if (user.fb) { %>
      <a href="<%=user.fb%>" target="_blank">
        <img class="social_media_icons" src="/images/elements/facebook_icon.svg"/>
      </a>
    <% } %>
    <% if (user.twitter) { %>
      <a href="<%=user.twitter%>" target="_blank">
        <img class="social_media_icons" src="/images/elements/twitter_icon.svg"/>
      </a>
    <% } %>
    <% if (user.insta) { %>
      <a href="<%=user.insta%>" target="_blank">
        <img class="social_media_icons" src="/images/elements/instagram_icon.svg"/>
      </a>
    <% } %>
    <% if (user.blog) { %>
      <a href="<%=user.blog%>" target="_blank">
        <img class="social_media_icons" src="/images/elements/url_icon.svg"/>
      </a>
    <% } %>
  </div>
</div>

<div id="user_stories_navbar">
  <div class="navbar_stories">
    <h3>STORIES</h3>
    <span class="number">17</span>
  </div>
  <div class="navbar_pictures">
    <h3>PICTURES</h3>
    <span class="number">45</span>
  </div>
  <h3>STORY MAP</h3>
  <h3>ABOUT ME</h3>
</div>

<div id="author_newsfeed">

  <% for (var i = 0; i < stories.length; i++) { %>

    <div class="author_newsfeed_card">

      <% if (story[i].imgType) { %>
        <div class="author_newsfeed_cardTop" style="background-image:url(../images/storypics/<%=story[i].id+'.'+story[i].imgType%>);">
      <% } else { %>
        <div class="author_newsfeed_cardTop" style="background-image:url(../images/car-1093927_1920.jpg);">
      <% } %>

        <div class="cardTop_banner">
          <% if (stories[i].authorPicture) { %>
            <img class="user_pic_profile" src="/images/profilepics/<%= stories[i].authorPicture %>" alt="Photo user" />
          <% } else { %>
            <img class="user_pic_profile" src="/images/profilepics/default.jpg" alt="Photo user" />
          <% } %>
          <div class="cardTop_infos">
            <p class="cardTop_infos_authorName"><%= stories[i].authorName %></p>
            <p class="cardTop_infos_storyDate"><%= stories[i].createdAt %></p>
          </div>
        </div>
      </div>

      <div class="author_newsfeed_cardBottom">
        <h3 class="cardText_title"><%= stories[i].title %></h3>
        <div class="div_cardText_text">
          <p class="cardText_text"><%= stories[i].text %></p>
        </div>
        <a href="stories/<%= stories[i]._id %>"> <img src="/images/elements/read_more_button.svg" class="cardTex_readMore" /> </a>
      </div>

    </div>

  <% } %>

</div>

<%- include('inc/footer'); %>
